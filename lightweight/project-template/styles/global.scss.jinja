@import "hljs-ocean";

$accent: rgb({! accent.r !}, {! accent.g !}, {! accent.b !});
$lightweight-accent: rgb(250, 160, 0);
$black: #000000;
$black-down: #3f3f3f;

$lean-width: 700px;
$lean-width-plus: 740px;
$stick-header-width: 940px;

body {
  min-height: 100vh;
  margin: 0;
  padding: 0;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;

  font-size: 1.1rem;
  background-color: #f8f8f8;
  font-family: Georgia, serif;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;

  @media screen and (max-width: $lean-width) {
    align-items: initial;
  }

  p {
    line-height: 1.5rem;
  }

  a {
    color: $black;
    text-decoration-color: $accent;

    &:hover, &:hover * {
      color: $black-down;
    }

    &:active, &:active * {
      color: $accent;
    }

    &.lw {
      text-decoration-color: $lightweight-accent;

      &:active, &:active * {
        color: $lightweight-accent;
      }
    }

    &.fragment {  // style for href="#<fragment>" links
      text-decoration-style: dashed;
      text-decoration-width: 1.5px;
    }
  }

  hr {
    margin: 2em 0;
    border: 1px solid rgb(234, 234, 234);
  }

  main {
    max-width: 800px;

    @media screen and (max-width: 840px) {
      padding: 0 1em 0;
    }

    .double-container {
      @media screen and (max-width: $lean-width-plus) {
        display: block;
      }

      display: flex;
      flex-direction: row;

      div {
        flex: auto;
      }
    }
  }

  #header-container {
    width: 900px;

    @media screen and (max-width: $stick-header-width) {
      width: 100vw;
    }

    header {
      display: flex;
      flex-direction: row;
      align-items: baseline;
      justify-content: space-between;

      @media screen and (max-width: $stick-header-width) {
        padding: 0 1em 0;
      }

      @media screen and (max-width: $lean-width) {
        display: block;
      }

      nav {
        font-size: 1.6em;

        @media screen and (max-width: $lean-width) {
          margin-left: -0.13em;
        }

        a {
          padding: 0 0.15em;
          text-transform: lowercase;
        }
      }
    }
  }

  footer {
    padding: 1em;
    font-size: 1rem;
  }

  pre {

    code {
      @media screen and (max-width: $lean-width-plus) {
        max-width: 92vw;
      }

      &.bash {
        .hljs-built_in {
          color: inherit;
        }

        &:before {
          content: '$ ';
          color: rgba(192, 197, 206, 0.6);
        }
      }
    }

    &.multiline-bash {
      code:not(:last-of-type) {
        margin-bottom: -1.2em;
        padding-bottom: 0;
      }
    }
  }
}